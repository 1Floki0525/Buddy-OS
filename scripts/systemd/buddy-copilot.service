[Unit]
Description=Buddy‑OS Copilot GUI (bottom‑right chat drawer)
After=buddy-broker.service graphical.target
Wants=buddy-broker.service graphical.target

[Service]
Type=simple
WorkingDirectory=/usr/share/buddy-os/buddy/copilot
# The GUI needs an X display; the display manager will set $DISPLAY automatically.
# If you ever run headless, replace the line below with an Xvfb launch:
# ExecStartPre=/usr/bin/Xvfb :0 -screen 0 1280x720x24
ExecStart=/usr/bin/python3 /usr/share/buddy-os/buddy/copilot/gui.py
Restart=on-failure
RestartSec=5
Environment=DISPLAY=:0
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=graphical.target
